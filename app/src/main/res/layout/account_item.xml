<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iconUsername"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_alignBottom="@+id/textViewName" />
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            tools:text="Username"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iconUsername" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iconPassword"
            android:src="@drawable/ic_lock_outline_black_24dp"
            android:layout_alignBottom="@+id/textViewPass" />
        <TextView
        android:id="@+id/textViewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        tools:text="Password"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iconPassword"/>
    </RelativeLayout>
</LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iconEmail"
            android:src="@drawable/ic_mail_outline_black_24dp"
            android:layout_alignBottom="@+id/textViewEmail" />
    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        tools:text="Email"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iconEmail"/>
</RelativeLayout>

</LinearLayout>